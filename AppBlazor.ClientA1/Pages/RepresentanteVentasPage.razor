@page "/representanteventas"
@inject NavigationManager navigationManager
@inject RepresentanteVentasService representanteVentasService
<h3>RepresentanteVentasPage</h3>
<button @onclick="navegar" class="btn btn-primary">Navegar a Form Representante de Ventas</button>
@if (lista != null && lista.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Número de Empleado</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Cargo</th>
                <th>Fecha de Contrato</th>
                <th>Cuota</th>
                <th>Ventas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item.Num_Empl</td>
                    <td>@item.Nombre</td>
                    <td>@item.Edad</td>
                    <td>@item.Cargo</td>
                    <td>@item.FechaContrato.ToString("dd/MM/yyyy")</td>
                    <td>@item.Cuota.ToString("C")</td>
                    <td>@item.Ventas.ToString("C")</td>
                    <td>
                        <button class="btn btn-primary" @onclick="(() => recuperarRepresentanteVentas(item.Num_Empl))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                            </svg>
                        </button>
                        <button class="btn btn-danger" @onclick="(() => eliminarRepresentanteVentas(item.Num_Empl))">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private void navegar()
    {
        navigationManager.NavigateTo("/formrepresentanteventas");
    }
    private void recuperarRepresentanteVentas(int Num_Empl)
    {
        navigationManager.NavigateTo($"/formrepresentanteventas/edit/{Num_Empl}");
    }
    private void eliminarRepresentanteVentas(int Num_Empl)
    {
        representanteVentasService.eliminarRepresentanteVentas(Num_Empl);
        listarRepresentanteVentas();
    }
    public List<RepresentateVentasListCls> lista { get; set; } = new List<RepresentateVentasListCls>();

    protected override Task OnInitializedAsync()
    {
        listarRepresentanteVentas();
        return base.OnInitializedAsync();
    }
    private void listarRepresentanteVentas()
    {
        lista = representanteVentasService.listarRepresentanteVentas();
    }
}
